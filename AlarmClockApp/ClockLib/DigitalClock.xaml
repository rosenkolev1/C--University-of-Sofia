<UserControl x:Class="ClockLib.DigitalClock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClockLib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox Name="clockBox" FontSize="36" TextAlignment="Center" Text="00:00:00" HorizontalAlignment="Left" Margin="223,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="54" Width="345"/>
        
        <Button Click="ButtonStart_Click" x:Name="buttonStart" FontSize="36" Content="Start" HorizontalAlignment="Left" Margin="227,144,0,0" VerticalAlignment="Top" Height="50" Width="127"/>
        <Button Click="ButtonStop_Click" x:Name="buttonStop" FontSize="36" Content="Stop" HorizontalAlignment="Left" Margin="441,145,0,0" VerticalAlignment="Top" Height="50" Width="127"/>
        <Button Click="ButtonReset_Click" x:Name="buttonReset" FontSize="36" Content="Reset" HorizontalAlignment="Left" Margin="331,209,0,0" VerticalAlignment="Top" Height="50" Width="127"/>

    </Grid>
</UserControl>
